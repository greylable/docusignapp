<div class="content-wrapper-table">
  <div class="card border-dark mb-3">

    <div class="card-header">
      <div class="row">
        <div class="col-6">
          <i class="fa fa-envelope"></i> List an envelope to void
        </div>
      </div>
    </div>

    <div class="card-body">
      <div class="form-group">

        <%= simple_form_for @voidenvelope do |f| %>
          <div class="col">
            <%= f.input :envelope_id, label_html: {class: 'col-2'}, required: true, input_html: {class: 'col-10'} %>
            <%= f.input :name, label_html: {class: 'col-2'}, required: true, input_html: {class: 'col-10'} %>
            <%= f.input :void_reason, label_html: {class: 'col-2'}, required: true, input_html: {class: 'col-10'} %>
          </div>

          <div class="row top-buffer">
            <div class="col-1">
              <%= button_tag(type: "submit", class: 'btn btn-default') do %>
                Submit
              <% end %>
            </div>
            <div class="col-11">
              <span class="pull-right">
              <%= button_tag(:type => 'button', class: 'btn btn-default') do %>
                <% link_to 'Back', voidenvelopes_path, class: 'link-to-text-color' %>
              <% end %>
              </span>
            </div>
          </div>
        <% end %>

      </div>
    </div>

  </div>
</div>